.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:additionals, :index)
      %li=link_to pat(:new), url(:additionals, :new)
      %li.active=link_to pat(:edit), url(:additionals, :edit, :id => @additional.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:additional)
    .inner
      -form_for :additional, url(:additionals, :update, :id => @additional.id), :method => :put, :class => :form do |f|
        =partial "additionals/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
