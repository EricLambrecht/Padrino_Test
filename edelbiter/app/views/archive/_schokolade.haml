.post
  .bild 
    %img{:src => '/pictures/'+schokolade.bild, :width => '100%', :height => '400px'}
  .titel= link_to schokolade.titel.upcase, url_for(:archive, :show, :id => schokolade.id)
  #infokasten
    .kakao= 'Kakaogehalt: ' + schokolade.kakaogehalt.to_s + '%'
    .preis= 'Preis: ' + sprintf("%.2f", schokolade.preis.to_s).sub(".",",") + ' EUR'
    .inhalt= 'Packungsgewicht ' + sprintf("%.0f", schokolade.gewicht.to_s) + 'g'
    .naehrwerte= 'N&auml;hrwerte (pro 100g): '
    .kohy= 'Kohlenhydrate: ' + schokolade.kohlenhydrate.to_s + 'g'
    .zucker= '...davon Zucker: ' + schokolade.zucker.to_s + 'g'
    .fett= 'Fett: ' + schokolade.fett.to_s + 'g'
    .zutaten= 'Zutaten: ' + schokolade.zutaten 
    = schokolade.woher
    .anbaugebiet= 'Anbaugebiet: '+schokolade.anbaugebiet

  .body= simple_format(schokolade.body)

  .wertung
    = 'Wertung: Sehr schlecht '
    %span#zahl= drittel(schokolade.wertung)
    = ' Punkte'