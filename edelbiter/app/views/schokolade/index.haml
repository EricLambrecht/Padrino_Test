
- @title = "Startseite"
%br
/ .ueberschrift
/   = @spotlight_name
- if @post.class.name == 'Post'
  #show= partial 'schokolade/schokolade'
- if @post.class.name == 'Blogpost'
  .post= partial 'schokolade/blogpost'
%br
.elle
#social_media
  =javascript_include_tag('twitterFolgen.js')
  = link_to image_tag('/pictures/twitter.png'), url_for('http://www.twitter.com/edelbiter'), target: '_blank'
  %a.twitter-follow-button{"data-lang" => "de", "data-show-count" => "false", "data-show-screen-name" => "false", :href => "https://twitter.com/edelbiter"} @edelbiter folgen
  = link_to image_tag('/pictures/facebook.png'), url_for('http://www.facebook.com/edelbiter'), :id => "fb_img", target: '_blank'

  %table  
    %tr 
      // 4 spaltig!
      // tweets (unterhalb) beinhalten schon <td>s!
      %td
        = partial 'schokolade/tweet', :collection => @tweets
      %td#facebook
        =javascript_include_tag('facebook.js')
        .fb-like{"data-href" => "http://www.facebook.com/edelbiter", "data-layout" => "box_count", "data-send" => "true", "data-show-faces" => "true", "data-width" => "100"}
        
%hr.ellereverse
%br
%br
%br
.ueberschrift
  Liste aller getesteten Schokoladen
%br
%br
#search
  %label{:for => "filter"} Suche
  %input#filter{:name => "filter", :type => "text", :value => "", :placeholder => "z.B. Herstellername"}
#body
  #postliste
    %table
      %thead
        %tr
          %th.sortable-text Titel &#x21C5;
          %th.sortable-numeric Wertung&#x21C5;
          %th.sortable-numeric Preis&#x21C5;
      %tbody
        %tr= partial 'schokolade/postliste', :collection => @posts

  =javascript_include_tag('application.js')
  =javascript_include_tag('tablesort.js')

